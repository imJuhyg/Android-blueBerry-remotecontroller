<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.ContactFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서비스에 문제가 있거나 건의 사항이 있을 경우\n아래 메일로 연락주세요.\n\n애플리케이션 발전에 큰 도움이 됩니다."
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.175"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메일 보내기"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_mail"/>

    <ImageButton
        android:id="@+id/btn_mail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_gmail"
        android:scaleType="fitCenter"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.135"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="blueberry2service@gmail.com"
        android:textColor="@color/darkGray"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_mail"/>
</androidx.constraintlayout.widget.ConstraintLayout>