<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_view_frame"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corners_white"
    android:layout_marginTop="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_customize_setting_change"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/icon_settings_48"
        android:tint="@color/darkGray"
        android:background="@color/transparency"
        android:scaleType="fitCenter"
        android:padding="5dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.125"
        app:layout_constraintRight_toLeftOf="@id/btn_customize_delete"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_customize_delete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/icon_delete_48"
        android:tint="@color/darkGray"
        android:background="@color/transparency"
        android:scaleType="fitCenter"
        android:padding="5dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_percent="0.125"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/connected_device_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_info"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        android:background="@drawable/background_circle_purple"
        android:padding="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connected_device_text_view"/>

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="13dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/device_image"
        app:layout_constraintTop_toTopOf="@id/device_image"/>

    <TextView
        android:id="@+id/device_address"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginStart="13dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/device_image"
        app:layout_constraintBottom_toBottomOf="@id/device_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>